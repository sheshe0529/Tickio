generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id Int @id @default(autoincrement())
  nombre String
  correo String @unique 
  contrasena String 
  telefono String
  rol String 
  Activa Int
  
  tipo1Id      Int
  tipo2Id      Int
  tipo3Id      Int

  tipo1        Tipo_Evento  @relation("Tipo1Relation", fields: [tipo1Id], references: [id])
  tipo2        Tipo_Evento  @relation("Tipo2Relation", fields: [tipo2Id], references: [id])
  tipo3        Tipo_Evento  @relation("Tipo3Relation", fields: [tipo3Id], references: [id])

  RUC          String?
  razon_social String?

  ticket        Ticket?
}

model Tipo_Evento {
  id Int @id @default(autoincrement())
  nombre String 

  tipo1Usuarios Usuario[] @relation("Tipo1Relation")
  tipo2Usuarios Usuario[] @relation("Tipo2Relation")
  tipo3Usuarios Usuario[] @relation("Tipo3Relation")

  eventosTipo    Evento[]   @relation("TipoPrincipal")
  eventosSubtipo Evento[]   @relation("SubTipo")
}

model Evento {
  id Int @id @default(autoincrement())
  nombre String
  descripcion String
  direccion String
  fecha_inicio DateTime
  fecha_fin DateTime
  hora_inicio Int
  duracion Int
  aforo Int
  estado String
  
  tipoEventoId  Int
  subtipoId     Int

  tipoEvento    Tipo_Evento  @relation("TipoPrincipal", fields: [tipoEventoId], references: [id])
  subtipo       Tipo_Evento  @relation("SubTipo", fields: [subtipoId], references: [id])

  tipoTickets  Tipo_Ticket[]
  descuentos   Descuentos[]
}

model Tipo_Ticket {
  id        Int      @id @default(autoincrement())
  nombre    String
  precio    Float
  cantidad  Int

  eventoId  Int
  evento    Evento   @relation(fields: [eventoId], references: [id])

  tickets   Ticket[]
}

model Ticket {
  id           Int         @id @default(autoincrement())   
  fechaEmision DateTime                                    
  qr           Bytes?                                      
  nombre       String
  apellido     String
  dni          String
  estado       String

  tipoTicketId Int
  tipoTicket   Tipo_Ticket @relation(fields: [tipoTicketId], references: [id])

  usuarioId    Int @unique
  usuario      Usuario     @relation(fields: [usuarioId], references: [id])

  ordenId      Int
  orden        Orden       @relation(fields: [ordenId], references: [id])
}

model Orden {
  id          Int      @id @default(autoincrement())  
  estado      String                                 
  total       Float                                  
  estadoPago  String                                 

  tickets     Ticket[]                               
}

model Descuentos {
  id                  Int     @id @default(autoincrement())  
  nombre              String
  descuentoPorcentaje Int

  eventoId            Int
  evento              Evento  @relation(fields: [eventoId], references: [id])
}
